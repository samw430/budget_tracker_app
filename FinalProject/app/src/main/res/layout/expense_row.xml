<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        android:layout_margin="10dp"
        card_view:cardBackgroundColor="#fff6a0"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp">
    <LinearLayout
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:weightSum="4"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tvName"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            <TextView
                    android:id="@+id/tvDate"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            <TextView
                    android:id="@+id/tvCost"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            <TextView
                    android:id="@+id/tvCategory"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

        </LinearLayout>

        <Button
                android:id="@+id/btnDelete"
                android:text="Delete"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" card_view:layout_constraintEnd_toStartOf="@+id/btnEdit"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>

        <Button
                android:id="@+id/btnEdit"
                android:text="Edit"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" card_view:layout_constraintEnd_toStartOf="@+id/tvCost"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>